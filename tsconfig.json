{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": ".",
        "paths": {
            "symphony/*": [
                "./*"
            ]
        },
        "rootDir": ".",
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "exactOptionalPropertyTypes": true,
        "noUncheckedIndexedAccess": true,
        "useUnknownInCatchVariables": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "libs/**/*.ts",
        "services/**/*.ts",
        "scripts/**/*.ts",
        ".ci/**/*.ts",
        "ci/**/*.ts",
        "tests/**/*.ts",
        "test-parity.ts",
        "**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "coverage",
        "**/*.js",
        "**/*.cjs"
    ]
}
