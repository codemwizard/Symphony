{
  "name": "symphony",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "lint": "eslint",
    "lint-fix": "eslint . --fix",
    "test": "npm run test:node && npm run test:jest",
    "test:node": "node --conditions=test --import ./tests/loader.mjs --test tests/unit/*.spec.ts tests/*.test.js libs/db/__tests__/*.test.ts",
    "test:jest": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "build": "tsc --noEmit -p tsconfig.build.json",
    "security-check": "node --import ./tests/loader.mjs scripts/ci/security-gates.ts",
    "guardrails:db": "./scripts/guardrails/db-role-guardrails.sh",
    "ci:validate-evidence": "node scripts/ci/validate_evidence_schema.mjs",
    "ci:compliance": "node scripts/ci/verify_mtls.js && node scripts/ci/verify_audit_integrity.cjs && node scripts/ci/verify_authorization.cjs && node scripts/ci/verify_identity_context.cjs && node scripts/ci/verify_runtime_bootstrap.cjs",
    "ci:full": "npm run lint && security-check && npm run build && npm run test && npm run ci:compliance",
    "db:reset": "scripts/db/reset_db.sh",
    "db:apply": "scripts/db/apply_baseline.sh",
    "db:migrate": "scripts/db/migrate.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codemwizard/Symphony.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/codemwizard/Symphony/issues"
  },
  "homepage": "https://github.com/codemwizard/Symphony#readme",
  "exports": {
    "./libs/db/testOnly": {
      "test": "./libs/db/testOnly.ts",
      "default": null
    }
  },
  "dependencies": {
    "@aws-sdk/client-kms": "^3.962.0",
    "@types/pg": "^8.16.0",
    "diff": "^8.0.3",
    "express": "^5.2.1",
    "glob": "^13.0.0",
    "jose": "^6.1.3",
    "lodash": "^4.17.21",
    "lru-cache": "^11.2.4",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "test-exclude": "^7.0.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.53.0"
  },
  "overrides": {
    "diff": "$diff"
  }
}
