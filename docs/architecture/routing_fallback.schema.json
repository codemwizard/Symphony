{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["fallback_mode", "slo_thresholds", "routing_actions", "evidence"],
  "properties": {
    "fallback_mode": {"type": "string", "minLength": 1},
    "slo_thresholds": {
      "type": "object",
      "required": ["p50_ms", "p95_ms", "p99_ms", "max_error_rate"],
      "properties": {
        "p50_ms": {"type": "integer", "minimum": 1},
        "p95_ms": {"type": "integer", "minimum": 1},
        "p99_ms": {"type": "integer", "minimum": 1},
        "max_error_rate": {"type": "number", "minimum": 0, "maximum": 1}
      }
    },
    "routing_actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["on_condition", "action"],
        "properties": {
          "on_condition": {"type": "string", "minLength": 1},
          "action": {"type": "string", "minLength": 1}
        }
      }
    },
    "evidence": {
      "type": "object",
      "required": ["artifact", "fields"],
      "properties": {
        "artifact": {"type": "string", "minLength": 1},
        "fields": {"type": "array", "minItems": 1, "items": {"type": "string"}}
      }
    }
  }
}
